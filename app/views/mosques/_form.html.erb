<%= form_with(model: mosque, class: "contents") do |form| %>
  <% if mosque.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(mosque.errors.count, "error") %> prohibited this mosque from being saved:</h2>

      <ul class="list-disc ml-6">
        <% mosque.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.select :status,
        Mosque.statuses.keys.map { |key| [key.humanize, key] },
        {},
        class: [
          "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
          mosque.errors[:status].none? ? "border-gray-400 focus:outline-blue-600" : "border-red-400 focus:outline-red-600"
        ] %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": mosque.errors[:name].none?, "border-red-400 focus:outline-red-600": mosque.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": mosque.errors[:description].none?, "border-red-400 focus:outline-red-600": mosque.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :longitude %>
    <%= form.text_field :longitude, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": mosque.errors[:longitude].none?, "border-red-400 focus:outline-red-600": mosque.errors[:longitude].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :latitude %>
    <%= form.text_field :latitude, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": mosque.errors[:latitude].none?, "border-red-400 focus:outline-red-600": mosque.errors[:latitude].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :address %>
    <%= form.textarea :address, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": mosque.errors[:address].none?, "border-red-400 focus:outline-red-600": mosque.errors[:address].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :capacity %>
    <%= form.number_field :capacity, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": mosque.errors[:capacity].none?, "border-red-400 focus:outline-red-600": mosque.errors[:capacity].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :size %>
    <%= form.select :size,
        Mosque.sizes.keys.map { |key| [key.humanize, key] },
        {},
        class: [
          "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
          mosque.errors[:size].none? ? "border-gray-400 focus:outline-blue-600" : "border-red-400 focus:outline-red-600"
        ] %>
  </div>

  <div class="my-5">
    <%= form.label :city %>
    <%= form.select :city,
        Mosque.cities.keys.map { |key| [key.humanize, key] },
        {},
        class: [
          "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
          mosque.errors[:city].none? ? "border-gray-400 focus:outline-blue-600" : "border-red-400 focus:outline-red-600"
        ] %>
  </div>

  <div class="my-5">
    <%= form.label :establish_year %>
    <%= form.date_field :establish_year, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": mosque.errors[:establish_year].none?, "border-red-400 focus:outline-red-600": mosque.errors[:establish_year].any?}] %>
  </div>

  <h3>Donations</h3>

  <%= form.fields_for :donations do |donation_fields| %>
    <div class="my-3 border p-2 rounded">
      <%= donation_fields.label :title %>
      <%= donation_fields.text_field :title, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>

      <%= donation_fields.label :description %>
      <%= donation_fields.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": mosque.errors[:address].none?, "border-red-400 focus:outline-red-600": mosque.errors[:address].any?}] %>

      <%= donation_fields.label :target_amount %>
      <%= donation_fields.number_field :target_amount, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>

      <%= donation_fields.label :current_amount %>
      <%= donation_fields.number_field :current_amount, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>

      <%= donation_fields.check_box :is_verified %>
      <%= donation_fields.label :is_verified %>

      <%= donation_fields.check_box :_destroy %>
      <%= donation_fields.label :_destroy, "Remove this donation" %>
    </div>
  <% end %>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
